                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="普通用户"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

