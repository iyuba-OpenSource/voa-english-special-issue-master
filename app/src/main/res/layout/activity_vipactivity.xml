                    android:id="@+id/user_name_mine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="未登录"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

