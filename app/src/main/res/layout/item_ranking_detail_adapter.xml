<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="15dp"
    android:background="@drawable/background"
    android:elevation="5dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/xiebiao"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="-6dp"
            android:background="@drawable/boyinxiebiao">


        </TextView>

        <TextView
            android:id="@+id/sentence_en"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="10dp"

            android:layout_marginStart="-15dp"
            android:textColor="@color/black"
            android:textSize="15sp">


        </TextView>

        <TextView
            android:id="@+id/sentence_score"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:background="@drawable/rankingscore"
            android:text="xx"
            android:gravity="center_horizontal"
            android:paddingTop="6dp"
            android:textSize="15sp"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/sentence_cn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:visibility="gone">


        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sentence_all"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sentence_play"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:scaleType="fitStart"
            android:src="@drawable/zanting">

        </ImageView>

        <TextView
            android:id="@+id/play_time"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:textSize="10sp"
            android:visibility="invisible">

        </TextView>


        <TextView
            android:id="@+id/create_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:gravity="end"
            android:paddingEnd="15dp"
            android:text="xxx"
            android:textSize="10sp">

        </TextView>


    </LinearLayout>


</LinearLayout>