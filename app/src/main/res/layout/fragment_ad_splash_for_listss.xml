<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ad_nsv"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="开屏"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/ad_tv_splash_csj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="穿山甲"
            android:textColor="@android:color/holo_blue_dark" />

        <FrameLayout
            android:id="@+id/ad_ll_csj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ad_tv_splash_ylh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="优量汇"
            android:textColor="@android:color/holo_blue_dark" />

        <FrameLayout
            android:id="@+id/ad_ll_ylh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ad_tv_splash_bd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="百度"
            android:textColor="@android:color/holo_blue_dark" />

        <FrameLayout
            android:id="@+id/ad_ll_bd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ad_tv_splash_ks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="快手"
            android:textColor="@android:color/holo_blue_dark" />

        <FrameLayout
            android:id="@+id/ad_ll_ks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>