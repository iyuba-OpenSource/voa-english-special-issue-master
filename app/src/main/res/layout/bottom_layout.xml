<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:clickable="true"
    android:orientation="horizontal"
    tools:ignore="SpeakableTextPresentCheck">


    <LinearLayout
        android:id="@+id/id_tab_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/page"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/tj"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/text_page"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/black" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/id_tab_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/video"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/video"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/text_video"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"

            android:gravity="center"
            android:text="视频"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout

        android:id="@+id/id_tab_course"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/course"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/course"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/text_course"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="微课"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_tab_mine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mine"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/wd"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/text_mine"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/black" />
    </LinearLayout>


</LinearLayout>